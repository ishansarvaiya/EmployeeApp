@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Employee List";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Employees</h5>
        <a asp-controller="Employee" asp-action="Create" class="btn btn-light btn-sm">
            <i class="bi bi-plus-circle"></i> Add
        </a>
    </div>
    <div class="card-body">
        <form method="get" class="row g-2 mb-3">
            <div class="col-md-4">
                <input type="text" name="searchName" value="@Context.Request.Query["searchName"]" class="form-control" placeholder="Search by name" />
            </div>
            <div class="col-md-4">
                <input type="text" name="searchTitle" value="@Context.Request.Query["searchTitle"]" class="form-control" placeholder="Search by title" />
            </div>
            <div class="col-md-4 d-flex">
                <button type="submit" class="btn btn-light text-primary border-primary me-2">
                    <i class="bi bi-search"></i> Search
                </button>
                <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Clear
                </a>
            </div>
        </form>

        <table class="table table-hover table-striped align-middle">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Title</th>
                    <th>Salary</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model)
                {
                    <tr>
                        <td>@e.Name</td>
                        <td>@e.CurrentSalary?.Title</td>
                        <td>@e.CurrentSalary?.Salary.ToString("C")</td>
                        <td class="text-end">
                            <a asp-controller="Employee" asp-action="Edit" asp-route-id="@e.EmployeeId" class="btn btn-outline-warning btn-sm me-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Employee" asp-action="Delete" asp-route-id="@e.EmployeeId" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
